<h1>Roles</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">
        Roles
        </h5>
        <%= link_to "New", admin_new_role_path, class: 'btn btn-primary' %> 
            <% if flash[:set_role_error] %>
            <%= flash[:set_role_error] %>
        <% end %>
        
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <th>Action</th>
            </tr>
            <% @roles.each do |r| %>
                <tr>
                    <td> <%= r.name %> </td>
                    <td>
                        <%= link_to "Edit", admin_edit_role_path(r) %>
                        <%= link_to "Delete", admin_role_path(r), method: :delete %>
                    </td>
                </tr>
            <% end %>
            
        </table>
    </div>
</div>
