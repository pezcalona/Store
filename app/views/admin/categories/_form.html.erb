<!-- VARIABLES: base_cateogry -->
<div class="card">
    <div class="card-body">
        <%= form_with(model: [:admin, base_category]) do |form| %>
        
            <div class="mb-3">
                <%= form.label :name, class: 'form-label' %>
                <%= form.text_field :name, class: 'form-control' %>
                <% if base_category.errors[:name].any? %>
                    <div>
                        <%= base_category.errors[:name].first %>
                    </div>
                <% end %>
            </div>
        <%= form.submit class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>