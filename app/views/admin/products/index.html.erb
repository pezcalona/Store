<h1>Product</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">
        Products
        </h5>
        <%= link_to "New", admin_new_product_path, class: 'btn btn-primary' %>
        
            <% if flash[:set_product_error] %>
            <%= flash[:set_product_error] %>
        <% end %>
        
        <table class="table table-hover">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
            <% @products.each do |p| %>
                <tr>
                    <td> <%= p.name %> </td>
                    <td> <%= p.price %> </td>
                    <td> <%= p.description %> </td>
                    <td> <%= p.category.name %> </td>
                    <td>
                        <%= link_to "Edit", admin_edit_role_path(p) %>
                        <%= link_to "Delete", admin_role_path(p), method: :delete %>
                    </td>
                </tr>
            <% end %>
            
        </table>
    </div>
</div>